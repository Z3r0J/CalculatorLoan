@model Application.ViewModel.LoanResultViewModel
@{
    ViewData["Title"] = "TotalToPay";
}
<div class="col-6 offset-3">
    <ul class="list-group">
        <li class="list-group-item text-center text-white bg-info">
            <img src="~/Images/{@Model.Name}.png"/>
            <h2>@Model.Name Loan</h2>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span class="title"><i class="fa-solid fa-pager"></i> Loan Type: </span>
            <span class="description">@Model.Name</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span class="title"><i class="fa-solid fa-dollar-sign"></i> Loan Amount: </span>
            <span class="description"><img src="~/Images/DOP.png" />  @Model.Amount.ToString("n2") DOP</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span class="title"><i class="fa-solid fa-percent"></i> Loan Interest Rate: </span>
            <span class="description">@Model.InterestRate%</span>

        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span class="title"><i class="fa-solid fa-calendar-days"></i> Loan Months: </span>
            <span class="description">@Model.Month Months</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span class="title"><i class="fa-solid fa-file-invoice-dollar"></i> Total to Pay: </span>
            <span class="badge badge-total description"><img src="~/Images/DOP.png" />  @Model.Total.ToString("n2") DOP</span>
        </li>
    </ul>
</div>

